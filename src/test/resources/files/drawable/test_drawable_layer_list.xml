<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Border -->
  <item>
    <shape>
      <corners
        android:bottomLeftRadius="3dp"
        android:topLeftRadius="3dp" />
      <solid
        android:color="@android:color/background_dark" />
    </shape>
  </item>
  <!-- Body -->
  <item
    android:bottom="1dp"
    android:left="1dp"
    android:top="1dp">
    <shape>
      <corners
        android:bottomLeftRadius="3dp"
        android:topLeftRadius="3dp" />
      <solid
        android:color="@android:color/background_dark" />
    </shape>
  </item>
</layer-list>
